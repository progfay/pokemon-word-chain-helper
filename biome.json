{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"includes": ["**/*.ts", "**/*.tsx", "!**/node_modules/**", "!**/dist/**"]
	}
}
